<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Employee_Name_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Email_Templates__c,&apos;Invalid_SSN_Update_Employee_SSN1_ME_Task&apos;), ISBLANK(Employee_Name__c))</errorConditionFormula>
    <errorDisplayField>Email_Templates__c</errorDisplayField>
    <errorMessage>Employee Names must be populated when using Invalid SSN Mass Email Template</errorMessage>
</ValidationRule>
