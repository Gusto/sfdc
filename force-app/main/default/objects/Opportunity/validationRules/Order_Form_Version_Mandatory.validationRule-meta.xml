<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Order_Form_Version_Mandatory</fullName>
    <active>true</active>
    <description>To make the Order form version mandatory when requires order form is true</description>
    <errorConditionFormula>AND(Requires_Order_Form__c,ISPICKVAL( Order_Form_Version__c , &apos;&apos;) )</errorConditionFormula>
    <errorDisplayField>Order_Form_Version__c</errorDisplayField>
    <errorMessage>Please select Order Form Version</errorMessage>
</ValidationRule>
