<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_change_discount_type</fullName>
    <active>true</active>
    <description>Once set, cannot change discount type</description>
    <errorConditionFormula>!ISNEW() &amp;&amp; ISCHANGED( Discount_Type__c )</errorConditionFormula>
    <errorDisplayField>Discount_Type__c</errorDisplayField>
    <errorMessage>Cannot change the discount type</errorMessage>
</ValidationRule>
