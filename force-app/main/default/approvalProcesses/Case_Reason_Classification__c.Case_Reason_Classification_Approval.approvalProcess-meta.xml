    <emailTemplate>Engagement_All/Case_Reason_Classification_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case_Reason_Classification__c.Type__c</field>
            <operation>equals</operation>
            <value>Payroll Care,Benefits Care,Engagement</value>
        </criteriaItems>
    </entryCriteria>
