    <formulas>
        <name>CalculatedDateTIme</name>
        <dataType>DateTime</dataType>
        <expression>DATETIMEVALUE({!FormattedDate} + &apos; &apos; + {!FormattedTime}) + 7</expression>
    </formulas>
    <formulas>
        <name>ConvertDurationToNumber</name>
        <dataType>Number</dataType>
        <expression>VALUE({!Loop_Over_All_Nice_Interactions.Call_Duration_in_Sec__c})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <description>Extract Date Part</description>
        <name>DatePart</name>
        <dataType>String</dataType>
        <expression>LEFT({!DateTimeString}, FIND(&apos; &apos;, {!DateTimeString}) - 1)</expression>
    </formulas>
    <formulas>
        <name>FormattedDate</name>
        <dataType>String</dataType>
        <expression>RIGHT({!DatePart}, 4) + &apos;-&apos; +
LEFT({!DatePart}, FIND(&apos;/&apos;, {!DatePart}) - 1) + &apos;-&apos; + 
TRIM(MID({!DatePart}, FIND(&apos;/&apos;, {!DatePart}) +1 , FIND(&apos;/&apos;, {!DatePart} , FIND(&apos;/&apos;, {!DatePart}) +1 ) -  FIND(&apos;/&apos;, {!DatePart})-1))</expression>
    </formulas>
    <formulas>
        <name>FormattedTime</name>
        <dataType>String</dataType>
        <expression>CASE(
{!MeridiemPart}, 
&apos;PM&apos;, 
IF (LEFT({!TimePart}, FIND(&apos;:&apos;, {!TimePart}) - 1) != &apos;12&apos;, TEXT(VALUE(LEFT({!TimePart}, FIND(&apos;:&apos;, {!TimePart}) - 1)) + 12), LEFT({!TimePart}, FIND(&apos;:&apos;, {!TimePart}) - 1)),
LEFT({!TimePart}, FIND(&apos;:&apos;, {!TimePart}) - 1)
) + &apos;:&apos; + 
TRIM(MID({!TimePart}, FIND(&apos;:&apos;, {!TimePart}) +1 , FIND(&apos;:&apos;, {!TimePart} , FIND(&apos;:&apos;, {!TimePart}) +1 ) -  FIND(&apos;:&apos;, {!TimePart})-1)) + &apos;:&apos; +
RIGHT({!TimePart}, 2)</expression>
    </formulas>
    <formulas>
        <name>MeridiemPart</name>
        <dataType>String</dataType>
        <expression>RIGHT({!DateTimeString}, 2)</expression>
    </formulas>
    <formulas>
        <description>Extract Time Part</description>
        <name>TimePart</name>
        <dataType>String</dataType>
        <expression>TRIM(MID({!DateTimeString}, FIND(&apos; &apos;, {!DateTimeString}) +1 , FIND(&apos; &apos;, {!DateTimeString} , FIND(&apos; &apos;, {!DateTimeString}) +1 ) -  FIND(&apos; &apos;, {!DateTimeString})))</expression>
    </formulas>
