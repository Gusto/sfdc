    <formulas>
        <description>Format first name</description>
        <name>First_Name_Formatted_Formula</name>
        <dataType>String</dataType>
        <expression>UPPER(LEFT( {!First_Name_Formula}, 1)) &amp; MID( {!First_Name_Formula}, 2, LEN( {!First_Name_Formula}))</expression>
    </formulas>
    <formulas>
        <name>First_Name_Formula</name>
        <dataType>String</dataType>
        <expression>IF(FIND(&apos; &apos;, {!Full_Name}) &lt;= 0, {!Full_Name}, LEFT({!Full_Name}, FIND(&apos; &apos;, {!Full_Name})-1))</expression>
    </formulas>
    <formulas>
        <description>Format last name</description>
        <name>Last_Name_Formatted_Formula</name>
        <dataType>String</dataType>
        <expression>UPPER(LEFT( {!Last_Name_Formula}, 1)) &amp; MID( {!Last_Name_Formula}, 2, LEN( {!Last_Name_Formula}))</expression>
    </formulas>
    <formulas>
        <name>Last_Name_Formula</name>
        <dataType>String</dataType>
        <expression>IF(FIND(&apos; &apos;, {!Full_Name}) &lt;= 0, {!Full_Name}, RIGHT({!Full_Name}, LEN({!Full_Name}) - FIND(&apos; &apos;, {!Full_Name})))</expression>
    </formulas>
